@model string


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>User Dashboard</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/Content/Javascript/logout.js"></script>
    <link href="~/Content/css/userdashboard.css" rel="stylesheet" />

</head>
<body>


    <header>
        <h3>Welcome @Model</h3>
        <nav>
            <button class="btn btn-danger" id="logoutButton">Logout</button>

        </nav>
    </header>


    <div class="content">

        <ul class="nav nav-tabs" id="dashboardTabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="@Url.Action("ViewAccountInfo", "Dashboard")">View Account Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#viewSalarySlip">View Salary Slip</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="@Url.Action("EditUserDetails", "Dashboard")">Edit User Details</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="@Url.Action("ChangePassword", "Dashboard")">Change Password</a>
            </li>
        </ul>

        <div class="tab-content mt-3">
            <div class="tab-pane fade show active" id="viewAccountInfo">
                <!-- View Account Info content -->
                <h2>View Account Info</h2>
                <!-- Display user information here -->
            </div>
            <div class="tab-pane fade" id="viewSalarySlip">
                <!-- View Salary Slip content -->
                <h2>View Salary Slip</h2>
                <!-- Display salary slip details here -->
            </div>
            <div class="tab-pane fade" id="editUserDetails">
                <!-- Edit User Details content -->
                <h2>Edit User Details</h2>
                <!-- Edit user details form goes here -->
            </div>
            <div class="tab-pane fade" id="changePassword">
                <!-- Change Password content -->
                <h2>Change Password</h2>
                <!-- Change password form goes here -->
            </div>
        </div>
    </div>

    <footer class=footer>

        <div class="footer-center">
            <p>&copy; @DateTime.Now.Year HR Payroll Management Inc. All rights reserved.</p>
        </div>

    </footer>

    <script>
        $(document).ready(function () {
            $('#dashboardTabs a').click(function (e) {
                e.preventDefault();
                $(this).tab('show');
            });
        });
    </script>
</body>
</html>
